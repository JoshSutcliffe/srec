<h1>Job application page</h1>

<form action="/apply/:id" enctype="multipart/form-data" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="">Name</label>
  <input type="text" name="name" placeholder="Required">

  <label for="">Email Address</label>
  <input type="text" name="email" placeholder="Required">

  <label for="">Phone Number</label>
  <input type="text" name="phoneNumber" placeholder="Required">

  <label for="">CV</label>
  <input type="file" name="cv" placeholder="Required">

  <label for="">Personal Video</label>
  <input type="file" name="video" placeholder="Required">

  <button>Submit</button>
</form>
